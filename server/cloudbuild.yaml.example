steps:
  # Build the Docker image
  - name: 'gcr.io/cloud-builders/docker'
    args: ['build', '-t', 'gcr.io/$PROJECT_ID/fortress-modeler-api:$COMMIT_SHA', '.']

  # Push the Docker image to Container Registry
  - name: 'gcr.io/cloud-builders/docker'
    args: ['push', 'gcr.io/$PROJECT_ID/fortress-modeler-api:$COMMIT_SHA']

  # Deploy to Cloud Run
  - name: 'gcr.io/google.com/cloudsdktool/cloud-sdk'
    entrypoint: gcloud
    args:
      - 'run'
      - 'deploy'
      - 'fortress-modeler-api'
      - '--image'
      - 'gcr.io/$PROJECT_ID/fortress-modeler-api:$COMMIT_SHA'
      - '--region'
      - 'australia-southeast2'
      - '--platform'
      - 'managed'
      - '--allow-unauthenticated'
      - '--port'
      - '8080'
      - '--memory'
      - '512Mi'
      - '--cpu'
      - '1'
      - '--min-instances'
      - '0'
      - '--max-instances'
      - '100'
      - '--concurrency'
      - '80'
      - '--cpu-throttling'
      - '--add-cloudsql-instances'
      - 'your-project:region:instance-name'
      - '--set-env-vars'
      - 'NODE_ENV=production,GOOGLE_CLIENT_ID=your-client-id,GOOGLE_CLIENT_SECRET=your-secret,JWT_SECRET=your-jwt-secret,DB_HOST=/cloudsql/your-connection-string,DB_USER=your-user,DB_PASSWORD=your-password,DB_NAME=your-db,CLIENT_URL=your-frontend-url'

images:
  - 'gcr.io/$PROJECT_ID/fortress-modeler-api:$COMMIT_SHA'

options:
  logging: CLOUD_LOGGING_ONLY
  machineType: 'E2_HIGHCPU_8'